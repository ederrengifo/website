      <a href="https://www.linkedin.com/in/ederrengifo" target="_blank"><li>LinkedIn</li></a>
    </ul>
  </div>
</div>
<div class="highlights-container animated fadeIn">
  <% @blogs.each do |blog| %>
  <div class="highlight-entrie">
    <h2><a href="<%= blog_path(blog) %>"><%= blog.title %></a></h2>
    <p><%= truncate(blog.detail.html_safe, length: 280, separator: ' ') %></p>
    <div class="read-more">
      <a href="<%= blog_path(blog) %>" class="more">READ MORE<i class="material-icons md-16 more-icon">arrow_forward</i></div></a>
  </div>
  <% end %>
</div>



